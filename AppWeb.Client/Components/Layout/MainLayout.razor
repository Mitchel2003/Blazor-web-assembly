@inject NavigationManager NavigationManager
@namespace AppWeb.Client.Components.Layout
@inherits LayoutComponentBase

@code { private void Reload() { NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true); } }

    <div class="min-h-screen flex bg-slate-900 text-gray-100">
        <aside class="w-64 bg-slate-800 flex-shrink-0">
            <NavMenu />
        </aside>

        <main class="flex-1 flex flex-col">
            <header class="h-14 shrink-0 flex items-center justify-end px-6 bg-slate-700 shadow">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </header>

            <section class="flex-1 p-6 overflow-y-auto">
                <ErrorBoundary>
                    <ChildContent>
                        @Body
                    </ChildContent>
                    <ErrorContent>
                        <div class="p-4 mb-4 rounded bg-red-600 text-white flex items-center justify-between">
                            <span>Something went wrong.</span>
                            <button class="underline" @onclick="Reload">ðŸ”„ Recargar</button>
                        </div>
                    </ErrorContent>
                </ErrorBoundary>
            </section>
        </main>
    </div>

    <ErrorBoundary>
        <ErrorContent>
            <div class="p-4 mb-4 rounded bg-red-600 text-white flex items-center justify-between">
                An unhandled error has occurred.
                <a href="." class="reload">Reload</a>
                <span class="dismiss">ðŸ—™</span>
            </div>
        </ErrorContent>
    </ErrorBoundary>