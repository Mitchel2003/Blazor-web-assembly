@using MudBlazor

@namespace AppWeb.Client.Shared.Ui

<div class="space-y-6 py-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="space-y-2">
            <MudText Typo="Typo.h4" Class="font-bold tracking-tight text-foreground">@Title</MudText>
            @if (!string.IsNullOrWhiteSpace(Subtitle))
            {
                <MudText Typo="Typo.subtitle1" Class="text-muted-foreground">@Subtitle</MudText>
            }
            @if (!string.IsNullOrWhiteSpace(Description))
            {
                <MudText Typo="Typo.body2" Class="max-w-3xl leading-relaxed text-muted-foreground">@Description</MudText>
            }
        </div>
        @if (Actions is not null)
        {
            <div class="flex flex-col sm:flex-row gap-2">@Actions</div>
        }
    </div>
    @if (ShowDivider)
    {
        <MudDivider />
    }
</div>

@code {
    [Parameter, EditorRequired] public string Title { get; set; } = default!;
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public string? Description { get; set; }
    [Parameter] public RenderFragment? Actions { get; set; }
    [Parameter] public bool ShowDivider { get; set; } = true;
}