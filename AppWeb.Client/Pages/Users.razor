@page "/users"

<PageTitle>Users</PageTitle>

<h1>Users</h1>

@if (users is null)
{ <p><em>Loadingâ€¦</em></p> }
else if (users.Count == 0)
{ <p>No users found.</p> }
else
{
    <DataTable Items="users" EmptyText="No users found.">
        <HeaderContent>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </HeaderContent>
        <RowTemplate Context="user">
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
            </tr>
        </RowTemplate>
    </DataTable>
}