@page "/users/create"
@page "/users/edit/{Id:int}"

@using AppWeb.Client.Shared.Ui
@using AppWeb.Shared.Inputs
@using AppWeb.Shared.Dtos
@using MudBlazor

<PageHeader Title="@(_existing is null ? "Create User" : $"Edit User #{_existing?.Id}")" Description="Fill in the form and save the user" />

<SectionContainer Padding="@(SectionContainer.SectionPadding.Sm)">
    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate Size="Size.Medium" Class="m-4" />
    }
    else
    {
        <FormUser Existing="@_existing" OnValidSubmit="HandleValidSubmit" />
    }
</SectionContainer>